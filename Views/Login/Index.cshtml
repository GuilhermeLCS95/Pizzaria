@model LoginModel;
@{
    Layout = "_LayoutUnlogged";
    ViewData["Title"] = "Login";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm btn-close" arial-label="Close"></button>
        @TempData["ErrorMessage"]
    </div>
}

<form asp-controller="Login" asp-action="Login" method="post">
    <div class="form-group">
        <label for="login">E-mail</label>
        <input type="email" class="form-control w-75" id="login" asp-for="Email" placeholder="Digite seu e-mail aqui">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" class="form-control w-75" id="senha" asp-for="Password" placeholder="Digite sua senha">
        <small id="passwordHelp" class="form-text text-muted">Nunca compartilhe sua senha.</small>
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>