<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
@model List<PizzaModel>
@using Pizzaria.Enums;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center subtitle">
    <p>Pizzas salgadas</p>
</div>
@if (Model != null)
{
    <div class="row">
        @foreach (var pizzaSalgada in Model)
        {
            @if (pizzaSalgada.SaltySweetEnum == Pizzaria.Enums.SaltySweetEnum.Salgada)
            {
                <div class="card" style="width: 18rem;" @pizzaSalgada.Id>
                    <img src="@pizzaSalgada.PizzaImg" class="card-img-top" alt="sabor pizza">
                    <div class="card-body">
                        <h5 class="card-title">@pizzaSalgada.PizzaFlavor</h5>
                        <span class="card-text">Tamanho: @pizzaSalgada.SizeEnum</span>
                        <p class="card-text">R$ @pizzaSalgada.Price</p>
                    </div>
                    <div style="display: flex; flex-direction: row;">
                        <a href="#" class="btn btn-primary">Comprar</a>
                    </div>
                </div>
            }
        }
    </div>
}
else
{
    <p>Não há pizzas para serem exibidas no momento.</p>
}

